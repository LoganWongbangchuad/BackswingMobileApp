@page "/Leaderboards"

@using System.Collections.Generic

@inject LeaderboardService LeaderboardService

<div class="container leaderboard-container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="leaderboard-table p-4">
                <div class="table-title">Leaderboard</div>
                <table class="table table-striped">
                    <thead class="table-dark">
                        <tr>
                            <th scope="col">Player Name</th>
                            <th scope="col">Score</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var player in Players)

                        {
                            <tr>
                                <td>@player.Username</td>
                                <td>@player.Score</td>
                                <button class="btn btn-outline-danger" @onclick="() => DeletePlayer(player.Id)">Delete</button>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<section class="jumbotron text-center">
<div class="container">
    <p>
        <a href="/AddScore" class="btn btn-primary my-2">Add Score</a>
    </p>
</div>
</section>


@code {
    private List<Player> Players { get; set; } = new List<Player>();

    protected override async Task OnInitializedAsync()

    {
        Players = await LeaderboardService.GetPlayersAsync();
    }
    private async Task DeletePlayer(int playerId)
    {
        await LeaderboardService.DeletePlayerAsync(playerId);
        Players = await LeaderboardService.GetPlayersAsync();

    }
}